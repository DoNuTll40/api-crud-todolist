            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "เกิดข้อผิดพลาดภายในเซิร์ฟเวอร์",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "internal server errors"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/delete/:userId": {
      "delete": {
        "tags": ["User"],
        "summary": "ลบข้อมูลผู้ใช้งาน",
        "description": "ใช้ลบข้อมูลผู้ใช้งานตาม ID ที่ระบุใน URL",
        "operationId": "deleteUser",
        "security": [
          {
            "BearerToken": []
          },
          {
            "Cookies": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
