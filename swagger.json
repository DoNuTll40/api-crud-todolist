    "/api/v1/user/update": {
      "patch": {
        "tags": ["User"],
        "summary": "อัปเดตข้อมูลผู้ใช้งาน",
        "description": "ใช้เพื่ออัปเดตข้อมูลผู้ใช้งานที่มีอยู่ เช่น อีเมล, ชื่อผู้ใช้งาน, ชื่อจริง, และนามสกุล",
        "operationId": "updateUser",
        "security": [
          {
            "BearerToken": []
          },
          {
            "Cookies": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "อีเมลของผู้ใช้งานที่ต้องการอัปเดต",
                    "example": "user@example.com"
                  },
                  "username": {
                    "type": "string",
                    "description": "ชื่อผู้ใช้งานที่ต้องการอัปเดต",
                    "example": "john_doe"
                  },
                  "firstname": {
                    "type": "string",
                    "description": "ชื่อจริงของผู้ใช้งานที่ต้องการอัปเดต",
                    "example": "John"
                  },
                  "lastname": {
                    "type": "string",
                    "description": "นามสกุลของผู้ใช้งานที่ต้องการอัปเดต",
                    "example": "Doe"
                  }
                },
                "required": ["email", "username", "firstname", "lastname"]
              }
            }
          }
